{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Coda",
  "version": "0.1.0",
  "identifier": "com.coda.macagent",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Coda",
        "width": 400,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "tooltip": "Coda - AI-Powered Code Automation"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
